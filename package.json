{
	"name": "jekyll-n-hyde",
	"version": "0.2.0",
	"publisher": "Hepheir",
	"engines": {
		"vscode": "^1.65.0"
	},
	"displayName": "Jekyll n Hyde",
	"description": "Jekyll n Hyde :: is a lightweight post manager for Jekyll repository.",
	"categories": [
		"SCM Providers",
		"Other"
	],
	"keywords": [
		"jekyll"
	],
	"icon": "images/icon.png",
	"bugs": {
		"email": "hepheir@gmail.com",
		"url": "https://github.com/Hepheir/vscode-jekyll-n-hyde/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Hepheir/vscode-jekyll-n-hyde"
	},
	"activationEvents": [
		"onView:categorizedPosts"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "categorizedPosts",
				"contents": "No Jekyll repository found.\n[Open Folder](command:workbench.action.files.openFolder)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "jekyll-n-hyde",
					"title": "Jekyll N Hyde",
					"icon": "images/jekyll.svg"
				}
			]
		},
		"views": {
			"jekyll-n-hyde": [
				{
					"id": "categorizedPosts",
					"name": "Categorized Posts",
					"icon": "images/jekyll.svg",
					"contextualTitle": "Jekyll n Hyde :: Categorized Posts"
				}
			]
		},
		"commands": [
			{
				"command": "categorizedPosts.postResource",
				"title": "Post Resource",
				"icon": "$(rocket)"
			},
			{
				"command": "categorizedPosts.draftResource",
				"title": "Draft Resource",
				"icon": "$(microscope)"
			},
			{
				"command": "categorizedPosts.deleteResource",
				"title": "Delete Resource",
				"icon": "$(trash)"
			},
			{
				"command": "categorizedPosts.addDraftResource",
				"title": "Add Draft Resource",
				"icon": "$(new-file)"
			},
			{
				"command": "categorizedPosts.refresh",
				"title": "Refresh Categorized Posts",
				"icon": "$(refresh)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "categorizedPosts.refresh",
					"group": "navigation",
					"when": "view == categorizedPosts"
				}
			],
			"view/item/context": [
				{
					"command": "categorizedPosts.postResource",
					"group": "inline",
					"when": "viewItem == draft"
				},
				{
					"command": "categorizedPosts.draftResource",
					"group": "inline",
					"when": "viewItem == post"
				},
				{
					"command": "categorizedPosts.deleteResource",
					"when": "viewItem == draft || viewItem == post"
				},
				{
					"command": "categorizedPosts.addDraftResource",
					"group": "inline",
					"when": "viewItem == category"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"@types/yamljs": "^0.2.31",
		"gray-matter": "^4.0.3",
		"vsce": "^2.7.0",
		"yamljs": "^0.3.0"
	}
}
